<div class="container" id="content-wrap">
<div id="content">
<%= render "posts/admin_widget" %>
<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>
<%= link_to 'New Post', new_post_path %>
<div class="table-responsive">
<table class="table table-hover">
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>Cover</th>
      <th>Title</th>
      <th>Content</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
      <td>
      <ul class="list-unstyled">
      <li><%= link_to '', post, class: 'fa fa-eye fa-lg a-show-small' %></li>
      <li><%= link_to '', edit_post_path(post), class: 'fa fa-pencil-square-o fa-lg a-edit-small' %></li>
      <li><%= link_to '', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'fa fa-trash fa-lg a-del-small' %></li>
      </ul>
  
        </td>
        <td  data-toggle="tooltip" data-placement="right" title="<%= post.image %>"><%= image_tag post.image.thumb.url %></td>
        <td><%= post.title %></td>
        
        <td><%= strip_tags raw post.content.truncate(200) %></td>
        
        
       
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>


